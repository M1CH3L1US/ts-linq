{
  "$schema": "..\\..\\node_modules\\nx\\schemas\\project-schema.json",
  "sourceRoot": "packages/ts-linq/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/ts-linq",
        "main": "packages/ts-linq/src/index.ts",
        "tsConfig": "packages/ts-linq/tsconfig.lib.json",
        "assets": ["packages/ts-linq/*.md"]
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs ts-linq {args.ver} {args.tag}"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        }
      ]
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/ts-linq"],
      "options": {
        "jestConfig": "packages/ts-linq/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
